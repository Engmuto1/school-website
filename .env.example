# Environment Configuration
# Copy this file to .env and update the values for your environment

# Application Settings
APP_ENV=development
APP_NAME="Greenfield International School"
APP_URL=http://localhost
APP_VERSION=1.0.0
APP_DEBUG=true

# Database Configuration
DB_HOST=localhost
DB_NAME=school_website
DB_USER=root
DB_PASS=
DB_CHARSET=utf8mb4

# Email Configuration (SMTP)
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_FROM_EMAIL=noreply@school.com
MAIL_FROM_NAME="${APP_NAME}"

# Security Settings
CSRF_TOKEN_NAME=_token
SESSION_LIFETIME=3600
PASSWORD_MIN_LENGTH=8
ENCRYPTION_KEY=

# File Upload Settings
MAX_FILE_SIZE=5242880
UPLOAD_PATH=uploads

# Pagination Settings
ITEMS_PER_PAGE=10
NEWS_PER_PAGE=6
EVENTS_PER_PAGE=6

# Cache Settings
CACHE_ENABLED=true
CACHE_DURATION=3600

# Logging
LOG_LEVEL=error
LOG_PATH=storage/logs